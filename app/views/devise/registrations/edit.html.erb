<% content_for(:auth_header) do %>
  <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900"><%= t("devise.registrations.edit.edit_account", resource_name: resource_name.to_s.humanize) %></h2>
<% end %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, data: {turbo: false}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="mb-3">
    <%= f.label :first_name, class: label_class do %>
      <%= t("activerecord.attributes.user.first_name") %>
    <% end %>
    <div class="mt-1">
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: input_class %>
    </div>
  </div>
  <div class="mb-3">
    <%= f.label :last_name, class: label_class do %>
      <%= t("activerecord.attributes.user.last_name") %>
    <% end %>
    <div class="mt-1">
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: input_class %>
    </div>
  </div>
  <div class="mb-3">
    <%= f.label :email, class: label_class do %>
      <%= t("activerecord.attributes.user.email") %>
    <% end %>
    <div class="mt-1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: input_class %>
    </div>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="mt-1 text-sm text-gray-500"><%= t("devise.registrations.edit.waiting_confirmation", email: resource.unconfirmed_email) %></div>
  <% end %>
  <div class="mb-3">
    <%= f.label :password, class: label_class do %>
      <%= t("activerecord.attributes.user.password") %>
    <% end %>
    <div class="mt-1">
      <%= f.password_field :password, autocomplete: "new-password", class: input_class %>
    </div>
    <% if @minimum_password_length %>
      <em class="mt-1 text-sm text-gray-500"><%= t("devise.registrations.new.minimum_password_length", count: @minimum_password_length) %></em>
    <% end %>
  </div>
  <div class="mb-3">
    <%= f.label :password_confirmation, class: label_class do %>
      <%= t("activerecord.attributes.user.password_confirmation") %>
    <% end %>
    <div class="mt-1">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: input_class %>
    </div>
  </div>
  <div class="mb-3">
    <%= f.label :current_password, class: label_class do %>
      <%= t("activerecord.attributes.user.current_password") %>
    <% end %>
    <div class="mt-1">
      <%= f.password_field :current_password, autocomplete: "current-password", class: input_class %>
    </div>
  </div>
  <div class="actions mt-6">
    <%= f.submit t("devise.registrations.edit.update"), class: form_button_class %>
  </div>
<% end %>
<h3 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900"><%= t("devise.registrations.edit.cancel_account_title") %></h3>
<div class="mt-2 text-center text-sm text-gray-600">
  <%= t("devise.registrations.edit.unhappy") %>
  <%= button_to t("devise.registrations.edit.cancel_account"), registration_path(resource_name), data: { confirm: t("devise.registrations.edit.confirm_cancel"), turbo_confirm: t("devise.registrations.edit.confirm_cancel") }, method: :delete, class: "mt-2 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
</div>
<%= link_to t("devise.shared.links.back"), :back, class: "mt-2 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
