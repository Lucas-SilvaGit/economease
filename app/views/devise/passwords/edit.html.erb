<% content_for(:auth_header) do %>
  <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Change your password</h2>
<% end %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <div>
    <%= f.label :password, "New password", class: label_class %>
    <div class="mt-1">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: input_class %>
    </div>
    <% if @minimum_password_length %>
      <em class="mt-1 text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
  </div>
  <div>
    <%= f.label :password_confirmation, "Confirm new password", class: label_class %>
    <div class="mt-1">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: input_class %>
    </div>
  </div>
  <div class="flex items-center justify-between mb-6 mt-6">
    <%= f.submit "Change my password", class: form_button_class %>
  </div>
<% end %>
<div class="mt-4 text-center">
  <%= link_to "Login", new_session_path(resource_name), class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
</div>
