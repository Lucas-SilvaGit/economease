<%= form_with(model: goal, class: "max-w-xl mx-auto p-6 bg-white rounded-lg shadow-lg space-y-6") do |form|  %>
  <h1 class="text-2xl font-semibold text-gray-900 mb-4 text-center "><%= form_title %></h1>
  <% if goal.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-5" role="alert">
      <ul>
        <% goal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="grid grid-cols-1 gap-6">
    <div>
      <%= form.label :name, I18n.t("activerecord.models.goal.attributes.name"), class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>
    <div>
      <%= form.label :target_amount, I18n.t("activerecord.models.goal.attributes.target_amount"), class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :target_amount, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>
    <div>
      <%= form.label :current_amount, I18n.t("activerecord.models.goal.attributes.current_amount"), class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :current_amount, value: @current_balance, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", readonly: true %>
    </div>
    <div>
      <%= form.label :target_date, I18n.t("activerecord.models.goal.attributes.target_date"), class: "block text-sm font-medium text-gray-700" %>
      <%= form.date_field :target_date, value: Date.current.to_s, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>
    <div>
      <%= form.label :saved_value, I18n.t("activerecord.models.goal.attributes.saved_value"), class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :saved_value, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>
    <div class="mt-6 flex justify-end">
      <%= form.submit I18n.t("actions.save"), class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    </div>
  </div>
<% end %>
