<% content_for(:page_title, "Goals") %>
<h1 class="text-2xl font-semibold text-gray-900 mb-4">Editing goal</h1>
<%= render "form", goal: @goal %>
<div class="mt-6 flex justify-center space-x-4">
  <%= link_to "Back to goals", goals_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  <%= button_to "Destroy this goal", @goal, method: :delete, data: { confirm: "Are you sure?" }, class: "inline-flex items-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
</div>
